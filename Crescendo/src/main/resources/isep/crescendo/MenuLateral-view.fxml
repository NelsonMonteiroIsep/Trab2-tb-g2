    <Button text="💳 Carteira" onAction="#handleRedirectWallet" styleClass="menu-button-dark" />
    <Button text="📤 Enviar" onAction="#handleRedirectEnviar" styleClass="menu-button-dark"/>
    <Button text="📥 Receber" onAction="#handleRedirectReceber" styleClass="menu-button-dark"/>
    <Button text="🔁 Swap" onAction="#handleRedirectSwap" styleClass="menu-button-dark"/>
    <Button text="💼 Gestão" onAction="#handleRedirectGestao" styleClass="menu-button-dark"/>
    <Button text="💼 Transações" onAction="#handleRedirectTransacoes" styleClass="menu-button-dark"/>
    <Button text="🚪 Sair" onAction="#handleLogout" styleClass="menu-button-dark"/>

</VBox>
