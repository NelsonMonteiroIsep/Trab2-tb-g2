<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="isep.crescendo.controller.AdminController" style="-fx-padding: 20;">

    <top>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <Label text="GestÃ£o de Utilizadores" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Pesquisar por nome ou email..." HBox.hgrow="ALWAYS"/>
                <Button text="Pesquisar" onAction="#handlePesquisar"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">
            <TableView fx:id="userTable" prefHeight="350">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="nomeColumn" text="Nome" prefWidth="150"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="isAdminColumn" text="Admin" prefWidth="100"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Editar Nome" onAction="#handleEditarNome"/>
                <Button text="Tornar Admin" onAction="#handleTornarAdmin"/>
                <Button text="Remover Admin" onAction="#handleRemoverAdmin"/>
                <Button text="Apagar Utilizador" onAction="#handleApagarUtilizador"
                        style="-fx-background-color: #c62828; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" >
            <Button text="Voltar" onAction="#handleVoltar"/>
        </HBox>
    </bottom>
</BorderPane>