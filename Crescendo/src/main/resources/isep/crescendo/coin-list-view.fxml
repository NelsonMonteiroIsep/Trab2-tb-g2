<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?> <AnchorPane xmlns="http://javafx.com/javafx/21"
                                                  xmlns:fx="http://javafx.com/fxml/1"
                                                  fx:controller="isep.crescendo.controller.CoinListViewController"
                                                  prefHeight="400.0" prefWidth="200.0">
    <children>
        <HBox alignment="CENTER_LEFT" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" style="-fx-padding: 15px;">
            <children>
                <ImageView fx:id="imagemView" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" >
                    <HBox.margin>
                        <Insets right="15.0" />
                    </HBox.margin>
                </ImageView>

                <VBox alignment="CENTER_LEFT">
                    <Label fx:id="nomeLabel" text="[Crypto Name]" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label fx:id="simboloLabel" text="[Nomenclature]" style="-fx-font-size: 12px; -fx-text-fill: #888888;" />
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <Label  text="[Price]" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #00A3FF;" alignment="CENTER_RIGHT" />
            </children>
        </HBox>
    </children>
</AnchorPane>