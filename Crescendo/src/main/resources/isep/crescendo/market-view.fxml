<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="isep.crescendo.controller.MarketController"
      style="-fx-background-color: black;"
      maxWidth="Infinity" maxHeight="Infinity">

    <fx:include source="/isep/crescendo/navbar.fxml" />

    <!-- Main Content Area -->
    <HBox style="-fx-padding: 20; -fx-background-color: black;"
          maxWidth="Infinity" maxHeight="Infinity">

        <!-- Left Pane - Bitcoin Section -->
        <VBox style="-fx-spacing: 20; -fx-padding: 0 20 0 0;"
              maxWidth="Infinity" HBox.hgrow="ALWAYS">



            <!-- Bitcoin Section -->
            <VBox style="-fx-spacing: 10;">
                <Text text="Bitcoin"
                      style="-fx-font-size: 24px; -fx-fill: white; -fx-font-weight: bold;"/>

                <HBox style="-fx-spacing: 20;" alignment="TOP_LEFT">
                    <!-- Top Sales -->
                    <VBox style="-fx-background-color: #1a1a1a; -fx-padding: 15; -fx-background-radius: 10; -fx-spacing: 10;"
                          maxWidth="Infinity" HBox.hgrow="ALWAYS">
                        <Text text="Top Sales"
                              style="-fx-font-size: 18px; -fx-fill: white; -fx-font-weight: bold;"/>
                        <VBox style="-fx-spacing: 5;">
                            <HBox>
                                <Text text="BTC" style="-fx-font-size: 16px; -fx-fill: white;"/>
                            </HBox>
                            <HBox style="-fx-spacing: 5;">
                                <Text text="H1H1" style="-fx-font-size: 14px; -fx-fill: #4CAF50;"/>
                                <Text text="ETH" style="-fx-font-size: 14px; -fx-fill: #4CAF50;"/>
                                <Text text="L2L2" style="-fx-font-size: 14px; -fx-fill: #4CAF50;"/>
                                <Text text="SHIBR" style="-fx-font-size: 14px; -fx-fill: #4CAF50;"/>
                            </HBox>
                        </VBox>
                    </VBox>

                    <!-- Top Losses -->
                    <VBox style="-fx-background-color: #1a1a1a; -fx-padding: 15; -fx-background-radius: 10; -fx-spacing: 10;"
                          maxWidth="Infinity" HBox.hgrow="ALWAYS">
                        <Text text="Top Losses"
                              style="-fx-font-size: 18px; -fx-fill: white; -fx-font-weight: bold;"/>
                        <VBox style="-fx-spacing: 5;">
                            <HBox style="-fx-spacing: 5;">
                                <Text text="USDT" style="-fx-font-size: 16px; -fx-fill: white;"/>
                                <Text text="-4%" style="-fx-font-size: 14px; -fx-fill: #F44336;"/>
                            </HBox>
                            <HBox style="-fx-spacing: 5;">
                                <Text text="Doge" style="-fx-font-size: 14px; -fx-fill: #F44336;"/>
                                <Text text="70%" style="-fx-font-size: 14px; -fx-fill: #F44336;"/>
                            </HBox>
                            <HBox style="-fx-spacing: 5;">
                                <Text text="RAVE" style="-fx-font-size: 14px; -fx-fill: #F44336;"/>
                                <Text text="1%" style="-fx-font-size: 14px; -fx-fill: #F44336;"/>
                            </HBox>
                        </VBox>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>


        <VBox style="-fx-spacing: 10; -fx-padding: 0 0 0 20;"
              maxWidth="100" HBox.hgrow="ALWAYS">
            <Text text="Coins"
                  style="-fx-font-size: 24px; -fx-fill: white; -fx-font-weight: bold;"/>

            <!-- Table Header -->
            <GridPane style="-fx-padding: 5 0;" hgap="20">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                </columnConstraints>
                <children>
                    <Text text="Hot" style="-fx-font-size: 16px; -fx-fill: white; -fx-font-weight: bold;"
                          GridPane.columnIndex="0"/>
                    <Text text="Market Cap" style="-fx-font-size: 16px; -fx-fill: white; -fx-font-weight: bold;"
                          GridPane.columnIndex="1"/>
                    <Text text="Price" style="-fx-font-size: 16px; -fx-fill: white; -fx-font-weight: bold;"
                          GridPane.columnIndex="2"/>
                </children>
            </GridPane>

            <!-- Coin Rows -->
            <VBox style="-fx-spacing: 5;" maxWidth="Infinity" VBox.vgrow="ALWAYS">
                <!-- Row 1 -->
                <GridPane style="-fx-padding: 5; -fx-background-color: #1a1a1a;" hgap="20">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                    </columnConstraints>
                    <children>
                        <Text text="Bitcoin" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="0"/>
                        <Text text="BTC" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="1"/>
                        <Text text="100k" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="2"/>
                    </children>
                </GridPane>

                <!-- Row 2 -->
                <GridPane style="-fx-padding: 5;" hgap="20">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                    </columnConstraints>
                    <children>
                        <Text text="Bitcoin" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="0"/>
                        <Text text="BTC" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="1"/>
                        <Text text="100k" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="2"/>
                    </children>
                </GridPane>

                <!-- Row 3 -->
                <GridPane style="-fx-padding: 5; -fx-background-color: #1a1a1a;" hgap="20">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                    </columnConstraints>
                    <children>
                        <Text text="Bitcoin" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="0"/>
                        <Text text="BTC" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="1"/>
                        <Text text="100k" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="2"/>
                    </children>
                </GridPane>
            </VBox>
        </VBox>
    </HBox>
</VBox>