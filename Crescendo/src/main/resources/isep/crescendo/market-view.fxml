<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="isep.crescendo.controller.MarketController"
            style="-fx-background-color: #1e1e1e;" prefHeight="800.0" prefWidth="1200.0">

    <!-- NAVBAR SUPERIOR -->
    <top>
        <HBox spacing="20" alignment="CENTER_RIGHT" style="-fx-background-color: #2d2d30; -fx-padding: 10 20;">
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="userNameLabel" text="Bem-vindo!" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <Label fx:id="saldoLabel" text="0.00 €" style="-fx-text-fill: white; -fx-font-size: 16px;" />
            <Button text="🔔" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- MENU LATERAL -->
    <left>
        <VBox spacing="20" style="-fx-background-color: #252526; -fx-padding: 30px;" alignment="TOP_CENTER">
            <Label text="📊 Market" style="-fx-text-fill: white; -fx-font-size: 20px;" />
            <Button text="🏠 Portfolio" styleClass="menu-button-dark"/>
            <Button text="💳 Carteira" styleClass="menu-button-dark" />
            <Button text="📤 Enviar" styleClass="menu-button-dark"/>
            <Button text="📥 Receber" styleClass="menu-button-dark"/>
            <Button text="🔁 Swap" styleClass="menu-button-dark"/>
            <Button text="💼 Gestão" styleClass="menu-button-dark"/>
            <Button text="🚪 Sair" onAction="#handleLogout" styleClass="menu-button-dark"/>
        </VBox>
    </left>

    <!-- CONTEÚDO PRINCIPAL -->
    <center>
        <VBox spacing="15" style="-fx-background-color: #2d2d30; -fx-padding: 20; -fx-background-radius: 10;" prefWidth="900">

            <!-- Linha de topo: Pesquisa + filtros alinhados à direita -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <!-- Logotipo -->
                <ImageView fx:id="coinLogo" fitHeight="32" fitWidth="32"
                           style="-fx-background-radius: 16;" />

                <!-- Campo de pesquisa -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Pesquisar moeda:" style="-fx-text-fill: white;" />
                    <TextField fx:id="campoPesquisaMoeda"
                               promptText="Pesquisar moeda..."
                               style="-fx-background-color: #3c3c3c; -fx-text-fill: white;" prefWidth="200"/>
                </HBox>

                <Region HBox.hgrow="ALWAYS" />

                <!-- Filtros -->
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label text="Intervalo:" style="-fx-text-fill: white;" />
                    <ComboBox fx:id="intervaloSelecionadoBox" onAction="#atualizarGrafico"
                              style="-fx-background-color: #3c3c3c; -fx-text-fill: white;" prefWidth="150"/>

                    <Label text="Período:" style="-fx-text-fill: white;" />
                    <ComboBox fx:id="periodoSelecionadoBox" onAction="#atualizarGrafico"
                              style="-fx-background-color: #3c3c3c; -fx-text-fill: white;" prefWidth="150"/>
                </HBox>
            </HBox>

            <!-- Gráfico -->
            <LineChart fx:id="lineChart" prefHeight="400" prefWidth="860"
                       animated="false" createSymbols="true">
                <xAxis>
                    <CategoryAxis fx:id="eixoX" label="Data" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="eixoY" label="Valor (€)" autoRanging="true" forceZeroInRange="false"/>
                </yAxis>
            </LineChart>

            <!-- Informação -->
            <Label fx:id="infoLabel" text="Última variação: +0.00%" style="-fx-text-fill: #00e676;" />

        </VBox>
    </center>

</BorderPane>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="isep.crescendo.controller.MarketController"
      style="-fx-background-color: black;"
      maxWidth="Infinity" maxHeight="Infinity">

    <fx:include source="/isep/crescendo/navbar.fxml" />

    <!-- Main Content Area -->
    <HBox style="-fx-padding: 20; -fx-background-color: black;"
          maxWidth="Infinity" maxHeight="Infinity">

        <!-- Left Pane - Bitcoin Section -->
        <VBox style="-fx-spacing: 20; -fx-padding: 0 20 0 0;"
              maxWidth="Infinity" HBox.hgrow="ALWAYS">



            <!-- Bitcoin Section -->
            <VBox style="-fx-spacing: 10;">
                <Text text="Bitcoin"
                      style="-fx-font-size: 24px; -fx-fill: white; -fx-font-weight: bold;"/>

                <HBox style="-fx-spacing: 20;" alignment="TOP_LEFT">
                    <!-- Top Sales -->
                    <VBox style="-fx-background-color: #1a1a1a; -fx-padding: 15; -fx-background-radius: 10; -fx-spacing: 10;"
                          maxWidth="Infinity" HBox.hgrow="ALWAYS">
                        <Text text="Top Sales"
                              style="-fx-font-size: 18px; -fx-fill: white; -fx-font-weight: bold;"/>
                        <VBox style="-fx-spacing: 5;">
                            <HBox>
                                <Text text="BTC" style="-fx-font-size: 16px; -fx-fill: white;"/>
                            </HBox>
                            <HBox style="-fx-spacing: 5;">
                                <Text text="H1H1" style="-fx-font-size: 14px; -fx-fill: #4CAF50;"/>
                                <Text text="ETH" style="-fx-font-size: 14px; -fx-fill: #4CAF50;"/>
                                <Text text="L2L2" style="-fx-font-size: 14px; -fx-fill: #4CAF50;"/>
                                <Text text="SHIBR" style="-fx-font-size: 14px; -fx-fill: #4CAF50;"/>
                            </HBox>
                        </VBox>
                    </VBox>

                    <!-- Top Losses -->
                    <VBox style="-fx-background-color: #1a1a1a; -fx-padding: 15; -fx-background-radius: 10; -fx-spacing: 10;"
                          maxWidth="Infinity" HBox.hgrow="ALWAYS">
                        <Text text="Top Losses"
                              style="-fx-font-size: 18px; -fx-fill: white; -fx-font-weight: bold;"/>
                        <VBox style="-fx-spacing: 5;">
                            <HBox style="-fx-spacing: 5;">
                                <Text text="USDT" style="-fx-font-size: 16px; -fx-fill: white;"/>
                                <Text text="-4%" style="-fx-font-size: 14px; -fx-fill: #F44336;"/>
                            </HBox>
                            <HBox style="-fx-spacing: 5;">
                                <Text text="Doge" style="-fx-font-size: 14px; -fx-fill: #F44336;"/>
                                <Text text="70%" style="-fx-font-size: 14px; -fx-fill: #F44336;"/>
                            </HBox>
                            <HBox style="-fx-spacing: 5;">
                                <Text text="RAVE" style="-fx-font-size: 14px; -fx-fill: #F44336;"/>
                                <Text text="1%" style="-fx-font-size: 14px; -fx-fill: #F44336;"/>
                            </HBox>
                        </VBox>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>


        <VBox style="-fx-spacing: 10; -fx-padding: 0 0 0 20;"
              maxWidth="100" HBox.hgrow="ALWAYS">
            <Text text="Coins"
                  style="-fx-font-size: 24px; -fx-fill: white; -fx-font-weight: bold;"/>

            <!-- Table Header -->
            <GridPane style="-fx-padding: 5 0;" hgap="20">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                </columnConstraints>
                <children>
                    <Text text="Hot" style="-fx-font-size: 16px; -fx-fill: white; -fx-font-weight: bold;"
                          GridPane.columnIndex="0"/>
                    <Text text="Market Cap" style="-fx-font-size: 16px; -fx-fill: white; -fx-font-weight: bold;"
                          GridPane.columnIndex="1"/>
                    <Text text="Price" style="-fx-font-size: 16px; -fx-fill: white; -fx-font-weight: bold;"
                          GridPane.columnIndex="2"/>
                </children>
            </GridPane>

            <!-- Coin Rows -->
            <VBox style="-fx-spacing: 5;" maxWidth="Infinity" VBox.vgrow="ALWAYS">
                <!-- Row 1 -->
                <GridPane style="-fx-padding: 5; -fx-background-color: #1a1a1a;" hgap="20">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                    </columnConstraints>
                    <children>
                        <Text text="Bitcoin" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="0"/>
                        <Text text="BTC" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="1"/>
                        <Text text="100k" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="2"/>
                    </children>
                </GridPane>

                <!-- Row 2 -->
                <GridPane style="-fx-padding: 5;" hgap="20">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                    </columnConstraints>
                    <children>
                        <Text text="Bitcoin" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="0"/>
                        <Text text="BTC" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="1"/>
                        <Text text="100k" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="2"/>
                    </children>
                </GridPane>

                <!-- Row 3 -->
                <GridPane style="-fx-padding: 5; -fx-background-color: #1a1a1a;" hgap="20">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
                    </columnConstraints>
                    <children>
                        <Text text="Bitcoin" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="0"/>
                        <Text text="BTC" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="1"/>
                        <Text text="100k" style="-fx-font-size: 14px; -fx-fill: white;"
                              GridPane.columnIndex="2"/>
                    </children>
                </GridPane>
            </VBox>
        </VBox>
    </HBox>
</VBox>