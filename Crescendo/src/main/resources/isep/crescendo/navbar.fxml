<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="isep.crescendo.controller.MarketController"
      alignment="CENTER_LEFT"
      spacing="20"
      prefHeight="60"
      style="-fx-background-color: #1e1e1e; -fx-padding: 10 20 10 20;">

    <!-- Logotipo ou título -->
    <Label text="Crescendo" style="-fx-font-size: 18px; -fx-text-fill: #CC9900; -fx-font-weight: bold;" />

    <Region HBox.hgrow="ALWAYS" />

    <!-- Nome do utilizador -->
    <Label fx:id="userNameLabel"
           text="Bem-vindo!"
           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" />

    <!-- Ícone de notificações -->
    <Button text="🔔" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />

</HBox>