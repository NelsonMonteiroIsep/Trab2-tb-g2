<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="isep.crescendo.controller.NavBarController"
      alignment="CENTER_LEFT"
      spacing="20"
      prefHeight="60"
      style="-fx-background-color: #1e1e1e; -fx-padding: 10;">

    <!-- Logo ou Nome -->
    <Label text="Crescendo"
           style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Espaço flexível -->
    <Region HBox.hgrow="ALWAYS" />
    <Label fx:id="navBarAnyControl" visible="false" />

    <!-- Botões de navegação -->
    <Button text="Início" onAction="#goHome"
            style="-fx-background-color: transparent; -fx-text-fill: white;" />

    <Button text="Produtos" onAction="#goProdutos"
            style="-fx-background-color: transparent; -fx-text-fill: white;" />

    <Button text="Perfil" onAction="#goPerfil"
            style="-fx-background-color: transparent; -fx-text-fill: white;" />

    <Button text="Sair" onAction="#logout"
            style="-fx-background-color: #d9534f; -fx-text-fill: white;" />

</HBox>
