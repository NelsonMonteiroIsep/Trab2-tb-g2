<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="isep.crescendo.controller.ResetPasswordController"
           style="-fx-background-color: #28282b;">

    <VBox alignment="CENTER" spacing="20">
        <VBox alignment="CENTER" spacing="10"
              style="-fx-background-color: #3a3a3e;
                     -fx-padding: 30px;
                     -fx-background-radius: 10;
                     -fx-border-color: white;
                     -fx-border-width: 2;
                     -fx-border-radius: 10;"
              maxWidth="300">

            <Label text="Redefinir Password"
                   style="-fx-font-size: 18px; -fx-text-fill: white;" />

            <TextField fx:id="tokenField"
                       promptText="Código enviado por email"
                       style="-fx-background-radius: 5;" />

            <PasswordField fx:id="newPasswordField"
                           promptText="Nova password"
                           style="-fx-background-radius: 5;" />

            <Button text="Enviar código"
                    onAction="#handleSendRecoveryCode"
                    style="-fx-background-color: yellow; -fx-text-fill: black; -fx-background-radius: 5;">
                <VBox.margin>
                    <Insets top="20"/>
                </VBox.margin>
            </Button>

            <Label fx:id="resetMessageLabel" textFill="red"/>
        </VBox>
    </VBox>
</StackPane>
