<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="isep.crescendo.controller.RightBarController"
      style="-fx-background-color: black;"
      >

    <VBox prefWidth="300" prefHeight="500" spacing="15.0"
          style="-fx-background-color: #28282b;-fx-background-radius: 10;">
        <BorderPane.margin>
            <Insets bottom="10.0" right="20.0" />
        </BorderPane.margin>

        <padding>
            <Insets left="20.0" right="20.0"/>
        </padding>
        <Label>AAAA</Label> <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true"/>
        <VBox alignment="CENTER_LEFT"> <children>
            <Label fx:id="nameLabel" text="Bitcoin" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>
            <Label fx:id="symbolLabel" text="BTC" textFill="#9c9c9c">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </children>
        </VBox>
        <VBox alignment="CENTER_RIGHT">
            <children>
                <Label fx:id="percentageLabel" text="+2.05%" textFill="#4caf50">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="priceLabel" text="100k" textFill="WHITE">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/> </VBox>
</VBox>
