<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="700.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="isep.crescendo.controller.RightBarController">

    <children>
        <VBox HBox.hgrow="ALWAYS"
              prefWidth="400.0" prefHeight="700.0"
              style="-fx-background-color: #2b2b2b; -fx-background-radius: 10;">

            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>

            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>
            <children>
                <Label text="Coins" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                    </VBox.margin>
                </Label>

                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                    <content>
                        <VBox fx:id="coinListContainer" spacing="10.0" style="-fx-background-color: transparent;">
                            <padding>
                                <Insets bottom="0.0" left="0.0" right="0.0" top="0.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</HBox>