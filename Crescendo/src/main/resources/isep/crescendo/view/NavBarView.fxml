<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<HBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="isep.crescendo.controller.NavBarController" alignment="CENTER_LEFT" spacing="10"
      prefHeight="50" style="-fx-background-color: #1a1a1d; -fx-padding: 10;">

    <padding>
        <Insets left="20" right="20"/>
    </padding>

    <Label text="Crescendo App" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>

    <Region HBox.hgrow="ALWAYS"/>

    <Button text="⚙️ Configurações" onAction="#handleShowSettings"
            style="-fx-background-color: #CC9900; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 5;"/>

</HBox>